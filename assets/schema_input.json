{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/emc/frag500/master/assets/schema_input.json",
    "title": "emc/frag500 pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "bam": {
                "type": "string",
                "format": "file-path",
                "pattern": ".*\\.bam$",
                "errorMessage": "Bam file from Dragen software."
            },
            "bai": {
                "type": "string",
                "format": "file-path",
                "pattern": ".*\\.bai$",
                "errorMessage": "Bai index file from Dragen software."
            },
            "assay": {
                "type": "string",
                "pattern": "tso500",
                "errorMessage": "Assay used for generating sequencing reads."
            }
        },
        "required": ["sample", "bam", "bai", "assay"]
    }
}
